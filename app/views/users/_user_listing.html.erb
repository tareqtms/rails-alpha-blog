<ul class="user-listing well text-center">
  <li><%= link_to gravatar_for(user), user_path(user) %></li>
  <li class="article-title"><%= link_to user.username, user_path(user) %></li>
  <li><small><%= pluralize user.articles.count, 'article'  if user.articles %></small></li>
  <% if logged_in_admin? %>
  <li><%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this user and all related articles?"} %></li>
  <% end %> 
</ul>