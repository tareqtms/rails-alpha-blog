<h1 class="text-center">Sign up for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
<div class="col-md-12">
<%= form_for @user, html: {class: "form-horizontal", role: "form"} do |f| %>
  <div class="form-group">
  <%= f.label :username, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
  <%= f.text_field :username, class: "form-control", placeholder: "User name", autofocus: true %>
  </div>
  </div>
  <div class="form-group">

    <%= f.label :email, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
    <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
    </div>
  </div>


  <div class="form-group">

    <%= f.label :password, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>
  </div>

  <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
  <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
  </div>
  </div>
  
<% end %>
</div>
</div>