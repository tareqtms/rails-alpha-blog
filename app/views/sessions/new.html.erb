<h1 class="text-center">Pls login</h1>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for :session, html: {class: "form-horizontal", role: "form"}, url: login_path do |f| %>
  <div class="form-group">
  <%= f.label :username, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
  <%= f.text_field :username, class: "form-control", placeholder: "User name", autofocus: true %>
  </div>
  </div>


  <div class="form-group">

    <%= f.label :password, class: "control-label col-sm-2"  %>
    <div class="col-sm-10">
    <%= f.password_field :password, class: "form-control", placeholder: "Password", autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
  <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
  </div>
  </div>
  
<% end %>
</div>
</div>